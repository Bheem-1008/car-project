<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>NERVESPARKS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../assest/css/login.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  </head>
  <body>

    <div class="user-box">
        <div class="user_header">
            <h1>Login</h1>
        </div>

        <div class="input_box">

            <form action="/api/auth/login" method="post">

                <input type="text"  id="userid" name="userid" placeholder="User id" >
                <input type="password" id="password"  name="password" placeholder="Password"><br><bR>

                <div class="accout-forgot">
                  <a href="/api/register">Don't have an account ?</a>
                <a href="/loing/forgot-password">forgot passowrd</a>
                </div>
                
                <% if (messages.error) { %>
                    <div id="errorMessageWrapper">
                        <p><%= messages.error %></p>
                    </div>
                <% } %>
                <button type="submit">sign up</button>
            </form>

        </div>

    </div>

    <script src="../assest/js/login.js"> </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>