<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="../bootstrap5/css/bootstrap.min.css">
    <link rel="stylesheet" href="../assest/css/password-forgot.css" />
  </head>
  <body>
    <div class="user-box">
      <div class="user_header">
        <h1>Reset your passowrd</h1>
      </div>
      <div class="input_box">
        <form action="/submitemail" method="post">
            <p for="" class="token-generate">To reset your password, enter the<br> email address you use to log in.</p>
          <input type="email" class="mt-4 form-control" name="email" class="px-3" placeholder=" Email" required />

          <% if (typeof messages !== 'undefined' && messages.error) { %>
          <div id="errorMessageWrapper" class="mt-3"><%= messages.error %></div>
          <% } %>
          <button type="submit">Get reset link </button>
        </form>
      </div>
    </div>

    <script src="../assest/js/login.js"></script>
    <script src="../bootstrap5/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
