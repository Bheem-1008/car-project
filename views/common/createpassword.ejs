    <!DOCTYPE html>
    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
        <link rel="stylesheet" href="../bootstrap5/css/bootstrap.min.css">
        <link rel="stylesheet" href="../assest/css/password-forgot.css" />
      </head>
      <body>
        <div class="user-box">
          <div class="user_header">
            <h1>Reset your password</h1>
          </div>
          <div class="input_box">

             <div class="show-email">
                <p><%= email %></p>
             </div>
            <form action="/changepassword" method="post" class="mt-2">
                <input type="hidden" name="token" value="<%= token %>">
              
                <input class="mt-1 py-1" type="password" name="newPassword" placeholder="New password" required>
               
                <input class="mt-3 py-1" type="password" name="confirmPassword" placeholder="confirm new password" required>
    
              <% if (messages.error) { %>
                <div id="errorMessageWrapper" class="error">
                    <%= messages.error %>
                </div>
            <% } %>
            <% if (messages.success) { %>
                <div class="success">
                    <%= messages.success %>
                </div>
            <% } %>
              <button type="submit">Reset password</button>
            </form>
          </div>
        </div>
    
        <script src="../assest/js/login.js"></script>
        <script src="../bootstrap5/js/bootstrap.bundle.min.js"></script>
      </body>
    </html>
    
    
</body>
</html>
